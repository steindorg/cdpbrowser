extends layout

block results
	h4=message
	ul
		for results in sound_results
			div(class="container" style="width: 400px; height:40px; margin-top: 20px;")
				li(style="list-style:none;")
					audio(preload="none", autobuffer, controls style="width: 100%; height 70% z-index:1;")
						source(src="#{results}", type="audio/wav")
				p= results
			div(class="container" style="width: 400px; height:40px; margin-top: 20px;")
				a(href='/results/#{results}') Remove
				a(href='/results/#{results}/toinfile' style="padding-left: 20px;") Add to infile
				a(href='/results/#{results}/toinfile2' style="padding-left: 20px;") Add to infile2